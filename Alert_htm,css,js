<html>
    <head>
        <style>
            *{
                margin: 0;
                padding: 0;
                box-sizing: border-box;
            }
            .container{
                width: 100%;
                height: 100vh;
                background-color:darkcyan;
                display: flex;
                align-items: center;
                text-align: center;
                justify-content: center;
            }
            .btn{
                cursor: pointer;
                padding:10px 10px;
                background-color:yellowgreen;
                box-shadow: 0 2px 5px green;
                outline: none;
                border-radius: 50%;
            }
            .popup{
                width: 400px;
                background-color: white;
                border-radius: 6px;
                position: absolute;
                top: 50%;
                left:50%;
                transform:translate(-50%,-50%);
                padding: 0 30px 30px;
                color:green;
                visibility: hidden;
                transition: transform 0.4s,top 0.4s;
            }
            .open_popup{
                visibility: visible;
            }
            .close_popup{
                visibility: hidden;
            }
            
            .popup img{
                margin-top: -50px;
                border-radius: 50%;
            }
            #ok{
                width: 50px;
                height: 50px;
                border-radius: 50%;
                background-color: green;
                cursor: pointer;
            }

        </style>
    </head>
    <body >
        <div class="container">
            <button type="submit" class="btn" onclick="open_popup()">SUBMIT</button>
            <div class="popup" id="pup">
                <img src="ti.avif" width="100px" height="100px">
                <h2>THANK YOU!</h2>
                <p style="color: yellowgreen;">Your Details Are Successfully Submitted</p>
                <br>
                <button id="ok">OK</button>
            </div>
        </div>
        <script>
            var a=document.getElementById("pup");
            function open_popup(){
                
                a.classList.add("open_popup");
            }
            function close_popup(){
                
                a.classList.remove("close_popup");
            }
        </script>
        
        
    </body>
</html>
