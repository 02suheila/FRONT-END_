        <script>
            var c=document.getElementById("circle");
            var up=document.getElementById("up");
            var down=document.getElementById("down");
            var rv=circle.style.transform;
            var rs;

            up.onclick =function(){
                rs=rv+"rotate(-90deg)";
                circle.style.transform=rs;
                rv=rs;
            }
            down.onclick =function(){
                rs=rv+"rotate(90deg)";
                circle.style.transform=rs;
                rv=rs;
            }
